<div class="tops-wrapper">
  <h1 class="headline">新規会員登録</h1>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <table class="company">
        <colgroup>
          <col width="40%">
          <col width="60%">
        </colgroup>
        <tr>
          <th class="arrow_box">ログインアドレス<br>
            <small>aaa@crold-valieat.jp</small></th>
            <td> <%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th class="arrow_box">パスワード<br>
          <small>*******</small>
        </th>
        <td>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
        </td>
      </tr>
      <tr>
      <th class="arrow_box">
        パスワード<br>
        <small>******</small>
      </th>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </td>
      </tr>
      <tr>
        <td colspan="2">  <%= f.submit "同意して登録" %></td>
      </tr>
    </table>
  <% end %>
  <%= render "devise/shared/links" %>
  <br>
  <br>
</div>
